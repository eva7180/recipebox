<% @recipe.each_slice(3) do |recipes| %>
	<div class="row">
		<% recipes.each do |recipe| %>
			<div class="col-md-4">
				<div class="recipe">
					<div class="image_wrapper">
						<%= link_to recipe do %>
							<% if recipe.image.attached? %>
								<%= image_tag recipe.image_variant %>
							<% end %>
						<% end %>
					</div>
					<h2>
						<%= link_to recipe.title, recipe %>
					</h2>
				</div>
			</div>
		<% end %>
	</div>
<% end %>